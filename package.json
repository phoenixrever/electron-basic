{
  "name": "electron-basic",
  "version": "1.0.0",
  "description": "This is a basic electron app,with only html js css ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "phoenixhell",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.4"
  },
  "build": {
    "appId": "com.phoenixhell.electron-basic",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "./icon.ico", // 图标
      "target": "nsis", //exe 安装格式 ,微软还有安装模式是MSI
      "arch": "x64"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false, // 显示安装向导页面 而不是一键安装
      "perMachine": true, //一台机器安装一次,不是每个用户都安装
      "allowToChangeInstallationDirectory": true //运行安装过程选择目录
    }
  }
}
