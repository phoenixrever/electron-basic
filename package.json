{
  "name": "electron-basic",
  "version": "1.0.0",
  "description": "This is a basic electron app,with only html js css ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "phoenixhell",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.4"
  },
  "build": {
    "appId": "com.phoenixhell.electron-basic",
    "win": {
      "target": {
        "target": "nsis",
        "arch": "x64"
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
